<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'book', book: @book %>
    </div>
    <div class="col-md-9">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <head>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
        </head>
  <% @books.each do |book| %>

        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(100,100), fallback: "no_image.jpg"%>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
  <% end %>
      </table>
    </div>
  </div>
</div>