<%= render 'books/userinfo', book: @user %>

<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>

    <h2>Book detail</h2>

    <tbody>
      <tr>
        <td><%= link_to @book.title, book_path(@book.id) %></td>

        <td><%= @book.body %></td>

        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    </tbody>
</table>

