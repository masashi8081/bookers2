<div>
  <%= flash[:notice] %>
</div>
<%= render 'userinfo', user: @user %>
<%= render 'books/book', book: @book %>

<table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>

    <h2>Books</h2>
<% @books.each do |book| %>

    <tbody>
      <tr>
        <td><%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image(100,100), fallback: "no_image.jpg"%>
            <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>

        <td><%= book.body %></td>

      </tr>
    </tbody>
<% end %>
</table>
