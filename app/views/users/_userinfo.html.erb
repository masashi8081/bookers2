<h2>User info</h2>
  <table class="table">
    <thead>
      <tr><%= image_tag user.get_profile_image(100,100) %></tr>
    </thead>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th class="btn btn-block btn-outline-secondary">
          <%= link_to edit_user_path(user.id) do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </th>
      </tr>
    </tbody>
  </table>
