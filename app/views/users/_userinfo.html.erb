<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <thead>
          <tr><%= image_tag user.get_profile_image(100,100) %></tr>
        </thead>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <th>
              <p><%= link_to "プロフィール編集", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" %></p>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>